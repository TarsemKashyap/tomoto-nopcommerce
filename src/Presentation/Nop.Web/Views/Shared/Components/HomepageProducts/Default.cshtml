@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid">
  <h2 class="section-title">@T("Homepage.Products")</h2>
         <p class="section-info font2">All our new arrivals in a exclusive featured list</p>
        <div class="products-slider owl-carousel owl-theme nav-outer" data-owl-options="{
        'dots': false,
        'nav': true,
        'responsive': {
        '576': {
        'items': 3
        },
        '768': {
        'items': 4
        },
        '1200': {
        'items': 5
        },
        '1380': {
        'items': 6
        }
        }
        }">
            @foreach (var item in Model)
            {
                   <div class="pb-5">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}